{
  "name": "@driflyte/mcp-server",
  "version": "0.0.14",
  "description": "MCP Server for Driflyte",
  "private": false,
  "type": "commonjs",
  "main": "./dist/index.js",
  "bin": {
    "driflyte": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/server.js"
  },
  "author": "Serkan Ozal <serkanozal86@gmail.com> (https://github.com/serkan-ozal)",
  "homepage": "https://github.com/serkan-ozal/driflyte-mcp-server",
  "repository": "serkan-ozal/driflyte-mcp-server",
  "license": "MIT",
  "keywords": [
    "mcp-server",
    "web-crawler",
    "ai",
    "llm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node ./src/index.ts",
    "watch": "tsc --watch",
    "inspector": "npm run build && chmod 755 './dist/index.js' && npx @modelcontextprotocol/inspector dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:check": "prettier --config .prettierrc.json --check ./src/*.ts ./src/**/*.ts ./src/**/**/*.ts ./src/**/**/**/*.ts",
    "lint:format": "prettier --config .prettierrc.json --write ./src/*.ts ./src/**/*.ts ./src/**/**/*.ts ./src/**/**/**/*.ts",
    "release:patch": "release-it --ci -VV --github.release --npm.publish --npm.skipChecks --no-git.requireCleanWorkingDir --no-git.requireUpstream",
    "release:minor": "release-it minor --ci -VV --github.release --npm.publish --npm.skipChecks --no-git.requireCleanWorkingDir --no-git.requireUpstream",
    "release:major": "release-it major --ci -VV --github.release --npm.publish --npm.skipChecks --no-git.requireCleanWorkingDir --no-git.requireUpstream"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^18.19.87",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.26.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.3",
    "release-it": "^17.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "axios": "^1.11.0"
  },
  "release-it": {
    "git": {
      "commit": "git commit -m \"Release ${version}\"",
      "tag": true,
      "tagName": "v${version}",
      "tagAnnotation": "Release ${version}",
      "push": true,
      "pushArgs": ["--follow-tags"]
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "releaseNotes": "Release ${version}"
    }
  }
}
