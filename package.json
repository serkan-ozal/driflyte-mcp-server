{
  "name": "@driflyte/mcp-server",
  "version": "0.1.5",
  "description": "MCP Server for Driflyte",
  "private": false,
  "type": "commonjs",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "bin": {
    "driflyte": "./dist/index.cjs"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "author": "Serkan Ozal <serkanozal86@gmail.com> (https://github.com/serkan-ozal)",
  "homepage": "https://github.com/serkan-ozal/driflyte-mcp-server",
  "repository": "serkan-ozal/driflyte-mcp-server",
  "license": "MIT",
  "keywords": [
    "mcp-server",
    "web-crawler",
    "ai",
    "llm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "mcpName": "com.driflyte/driflyte-mcp-server",
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.mjs --sourcemap --packages=external",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/index.cjs --sourcemap",
    "types": "tsc --emitDeclarationOnly -p tsconfig.types.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run types",
    "prepublishOnly": "npm run build",
    "start": "tsx ./src/index.ts",
    "watch": "tsc --watch",
    "inspector": "npm run build && chmod 755 ./dist/index.cjs && npx @modelcontextprotocol/inspector node ./dist/index.cjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:check": "prettier --config .prettierrc.json --check ./src/*.ts ./src/**/*.ts ./src/**/**/*.ts ./src/**/**/**/*.ts",
    "lint:format": "prettier --config .prettierrc.json --write ./src/*.ts ./src/**/*.ts ./src/**/**/*.ts ./src/**/**/**/*.ts",
    "release:patch": "release-it --ci -VV --git.commit --git.push --git.tag --git.tagName='v${version}' --github.release --github.releaseNotes='echo \"Release ${version}\"' --no-git.requireCleanWorkingDir --no-git.requireUpstream --npm.publish --npm.skipChecks",
    "release:minor": "release-it minor --ci -VV --git.commit --git.push --git.tag --git.tagName='v${version}' --github.release --github.releaseNotes='echo \"Release ${version}\"' --no-git.requireCleanWorkingDir --no-git.requireUpstream --npm.publish --npm.skipChecks",
    "release:major": "release-it major --ci -VV --git.commit --git.push --git.tag --git.tagName='v${version}' --github.release --github.releaseNotes='echo \"Release ${version}\"' --no-git.requireCleanWorkingDir --no-git.requireUpstream --npm.publish --npm.skipChecks",
    "mcpb:pack": "mcpb pack && mv driflyte-mcp-server.mcpb .mcpb/driflyte.mcpb"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^18.19.87",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "esbuild": "^0.23.0",
    "eslint": "^9.26.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.3",
    "release-it": "^17.6.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "axios": "^1.11.0",
    "commander": "^14.0.1"
  }
}
